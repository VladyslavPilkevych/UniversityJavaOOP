<?xml version="1.0" encoding="UTF-8"?>

<?import java.awt.*?>
<BorderPane fx:controller="game.GameController"
            xmlns:fx="http://javafx.com/fxml" prefWidth="600" prefHeight="400">
    <top>
        <MenuBar>
            <Menu text="File">
                <MenuItem text="Exit" onAction="#handleExit"/>
            </Menu>
        </MenuBar>
    </top>
    <center>
        <TextArea fx:id="gameTextArea" editable="false"/>
    </center>
    <bottom>
        <HBox alignment="CENTER">
            <Button text="Clear" onAction="#handleClear"/>
        </HBox>
    </bottom>
</BorderPane>
